<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_chatbot_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:text="sample text chatbot"
        android:fontFamily="@font/linotte_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_user_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:text="sample text user"
        android:fontFamily="@font/linotte_regular"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>