<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name"
    tools:context=".ui.register.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_under"
            android:background="#F4F5FE"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/layout_top"
                app:srcCompat="@drawable/icon_cloud"
                android:scaleType="fitEnd"
                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="134dp"
                android:layout_height="189dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@id/layout_top"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icon_ney_twig" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="@string/intro_regis"
                android:textAlignment="center"
                android:textColor="@color/blue_font_yourney"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_under"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            android:background="@drawable/rectangle_regis"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Akun"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
                app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/linotte_bold"
                android:textColor="@color/blue_font_yourney"
                android:textSize="24sp"
                />


            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coloumn_bg"
                android:hint="Masukkan username anda"
                android:drawableStart="@drawable/ic_person"
                android:padding="10dp"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan email anda"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_username"
                android:background="@drawable/coloumn_bg"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan password anda"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_email"
                android:background="@drawable/coloumn_bg"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/ed_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Konfirmasi password anda"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_password"
                android:background="@drawable/coloumn_bg"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_bold"
                android:text="@string/content_checkbox"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/ed_confirm_password"
                app:layout_constraintStart_toStartOf="@+id/ed_confirm_password"
                app:layout_constraintTop_toBottomOf="@+id/ed_confirm_password" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="19dp"
                android:fontFamily="@font/linotte_bold"
                android:text="Daftar"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkBox" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_light"
                android:text="Atau"
                android:textSize="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical"
                app:layout_constraintTop_toBottomOf="@+id/btn_login" />

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="19dp"
                android:backgroundTint="@color/blue_facebook"
                android:fontFamily="@font/linotte_bold"
                android:text="@string/content_btnFb"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textAlignment="center"
                app:cornerRadius="8dp"
                app:icon="@drawable/icon_facebook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:strokeColor="#707070"
                app:strokeWidth="0.5dp" />

            <Button
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="19dp"
                android:backgroundTint="@color/white"

                android:fontFamily="@font/linotte_bold"
                android:shadowColor="#A6A9B6"
                android:shadowRadius="0.25"
                android:text="@string/content_btnGoogle"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAllCaps="false"

                app:cornerRadius="8dp"
                app:icon="@drawable/icon_google"
                app:iconTint="#FF5722"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_facebook" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Sudah punya akun ?"
                android:fontFamily="@font/linotte_regular"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_google" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Masuk disini"
                android:textSize="12sp"
                android:fontFamily="@font/linotte_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@id/btn_google" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>